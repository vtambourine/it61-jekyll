/*****************************************************************************/
/*
/* Common
/*
/*****************************************************************************/

@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,600&subset=latin,cyrillic');

$sidebar-width = 300px;
$sidebar-color = #222729;

html,
body {
    height: 100%;
}

body {
    color: #888;
    background-color: $sidebar-color;
    font: 14pt 'Open Sans', 'PT Sans', Helvetica, Arial, sans-serif;
    font-weight: 300;
}

:link {
    text-decoration: none;
}

.dummy {
    background-color: pink;
}


body .facebook {
    background-color: #3b5998;
}

body .google {
    background-color: #c23321;
}

body .vk {
    background-color: #344d6c;
}

body .github {
    background-color: #fff;
    border-color: #7a7a7a;
    color: #333;
}

/*****************************************************************************/
/*
/* Sidebar
/*
/*****************************************************************************/

.header {
    float: left;
    width: $sidebar-width;
    background-color: $sidebar-color;

    & a:link,
    & a:visited {
        color: rgba(255, 255, 255, 0.75);
        text-decoration: none;
        transition: color .2s;

        &:hover {
            color: #fff;
        }
    }
}

.title {

}

.logo {
    $logo-size = 80px;

    font-size: 16px;
    margin: 1.34em 0;
    padding: 0.5em 1.5em 0.5em 1.5em;
    white-space: nowrap;
    text-align: center;
    color: #fff;

    &-link {
        display: block;
    }

    &-image {
        display: block;
        width: $logo-size;
        height: $logo-size;
        margin: 0 auto;
    }
}

.user {
    $user-picture-size = 48px;
    font-size: 15px;
    margin: .67em 0;
    padding: 0.5em 1.5em 0.5em 1.5em;
    text-align: right;

    &-singin {

    }

    &-info {
        margin-bottom: 1em;
    }

    &-name {
        position: relative;
        /*display: inline;*/
        padding-right: $user-picture-size + 8px;
        vertical-align: middle;
    }

    &-picture {
        /*display: inline;*/
        /*vertical-align: middle;*/
        position: absolute;
        top: 50%;
        right: 0;
        margin-top: -($user-picture-size / 2);
        border-radius: $user-picture-size;
    }
}

.navigation {
    line-height: 2;
    margin: .67em 0;
    text-align: right;

    &-list {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    &-item {
        margin: 0;
    }

    &-link {
        display: block;
        padding: 0.5em 1.5em 0.5em 1.5em;
        color: rgba(255, 255, 255, 0.5);
        text-decoration: none;

        &:hover {
            color: white;
        }

        &.active {
            background: rgba(0, 0, 0, 0.15);
            color: white;
        }
    }
}

/*****************************************************************************/
/*
/* Content
/*
/*****************************************************************************/

section() {
    padding: 0 85px 3em;
    /*outline: 1px red solid;*/
}

.content {
    margin-left: $sidebar-width;
    overflow: auto;
    min-height: 100%;
    background-color: #fff;

    & > article,
    &-section {
        section();
    }
}


/*****************************************************************************/
/*
/* Events
/*
/*****************************************************************************/

.event {
    &-section {
        section();
        background-color: #f5fafa;

        &.future {
            background-color: white;
        }
    }

    &-meta {
        font-size: 11pt;
        margin: 0;

        & em {
            font-weight: 400;
            font-style: normal;
            display: inline-block;
            width: 7em;
            color: #666;
        }
    }
}

/*****************************************************************************/
/*
/* Fellows
/*
/*****************************************************************************/

$fellow-margin = 20px;

.fellow {
    &-section {
        /*section();*/
    }

    // Список участников

    &-list {
        padding: 0;
        list-style: none;
        margin-left: -($fellow-margin);
    }

    &-box {
        display: block;
        float: left;
        box-sizing: border-box;
        width: 16.6%;
        padding-left: $fellow-margin;
        margin-bottom: $fellow-margin;
    }

    &-card {
        display: block;
        text-align: center;
        padding: 1em;
        background-color: white;
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.05);
        overflow: hidden;
        transition: box-shadow .2s;

        &-picture {
            display: block;
            width: 100%;
            margin-bottom: 1em;
            border-radius: 1000px;
        }

        &:hover {
            box-shadow: 0 2px 10px 0 yellow
        }
    }

    &-name {
        font-size: 0.8em;
        line-height: 1.27em;
        display: inline-block;
        height: 2.34em;
        /*padding: 1em 0 1em 0;*/
    }

    // Карточка участника

    &-info {
    }

    &-profile {
        overflow: auto;
        margin-bottom: 2.5em;
        clear: both;

        &-picture {
            float: left;
            width: 180px;
            margin-right: 1.5em;
            border-radius: 1000px;
        }
    }

    &-social {
        margin-bottom: 1.5em;

        &-link {
            display: inline-block;
            width: 24px;
            height: 24px;
            line-height: 24px;
            text-align: center;
            border-radius: 12px;
            font-size: 12px;

            margin-right: .25em;
            border-width: 1px;
            border-style: solid;
            color: #fff;
            font-weight: bold;
        }
    }

    &-events {
        &-item {
            &-date {
                font-size: 80%;
                margin-right: .75em;
            }
        }
    }
}

/*****************************************************************************/
/*
/* Forms
/*
/*****************************************************************************/

input,
textarea {
    padding: 0.5em;
    border: 1px solid rgba(0, 0, 0, 0.12);

    &:invalid {
        border-color: red;
    }

    &:focus {
        box-shadow: 0 0 6px 0 blue;
        outline: none;
    }
}

.login {
    &-section  {
        overflow: auto;

        form {
            font-size: 14px;

            input {
                margin: .24em;
            }

            label {
                display: inline-block;
                width: 140px;
                /*text-align: right;*/
            }
        }
    }
}

.oauth {
    &-link {
        display: inline-block;
        margin-right: 0.67em;
        padding: 0.34em 0.67em;
        color: #fff;
        border: 1px solid transparent;
        border-radius: 4px;
    }
}
